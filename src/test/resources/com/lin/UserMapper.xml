<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lin.UserMapper">

    <resultMap id="userResultMap" type="com.lin.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="sex" column="sex" typeHandler="com.lin.SexEnumHandler"/>
    </resultMap>

    <select id="selectById" resultMap="userResultMap">
        SELECT `id`, `name`, `age`, `sex`
        FROM `d_user`
        WHERE `age` = #{_age} and `id` in
        <foreach collection="_idList" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>

</mapper>